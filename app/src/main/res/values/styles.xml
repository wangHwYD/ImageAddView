<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <declare-styleable name="AddPhotoView">
        <attr name="add_photo_max_count" format="integer"/>
        <attr name="add_photo_horizontal_count" format="integer"/>
        <attr name="add_photo_edit_mode" format="boolean"/>
        <attr name="add_photo_add_icon" format="reference"/>
        <attr name="add_photo_horizontal_margin" format="dimension"/>
        <attr name="add_photo_vertical_margin" format="dimension"/>
        <attr name="add_photo_delete_icon" format="reference"/>
    </declare-styleable>
</resources>
